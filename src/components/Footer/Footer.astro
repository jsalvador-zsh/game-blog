---
// components/Footer.astro
import { dataFooter } from "@components/Footer/Footer.data";
import SocialIcon from "./SocialIcon.astro";
import Logo from "./Logo.astro";

const { 
  logo, 
  description, 
  links, 
  socialLinks 
} = dataFooter;
---

<footer class="bg-background border-t border-t-muted">
  <div class="mx-auto max-w-5xl px-4 py-8 sm:px-4 lg:px-6">
    <!-- Logo -->
    <div class="flex justify-center">
      <Logo />
    </div>

    <!-- Descripción -->
    <p class="mx-auto mt-6 max-w-md text-center leading-relaxed text-foreground">
      {description}
    </p>

    <!-- Links de navegación -->
    <nav class="mt-12">
      <ul class="flex flex-wrap justify-center gap-6 md:gap-8 lg:gap-12">
        {links.map(({ name, link }) => (
          <li>
            <a
              class="text-foreground transition hover:text-accent"
              href={link}
            >
              {name}
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <!-- Redes sociales -->
    <ul class="mt-12 flex justify-center gap-6 md:gap-8">
      {socialLinks.map(({ name, url}) => (
        <li>
          <a
            href={url}
            rel="noreferrer"
            target="_blank"
            class="text-foreground transition hover:text-accent"
          >
            <span class="sr-only">{name}</span>
            <SocialIcon name={name} />
          </a>
        </li>
      ))}
    </ul>
  </div>
</footer>